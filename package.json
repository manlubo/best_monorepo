{
  "name": "ep",
  "private": true,
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "build:ts": "tsc -b tsconfig.build.json",
    "lint": "pnpm exec turbo run lint",
    "typecheck": "turbo run typecheck",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "prepare": "husky"
  },
  "lint-staged": {
    "apps/api/**/*.{ts,tsx,js}": [
      "pnpm --filter @best-mono/api exec eslint --fix"
    ],
    "apps/web/**/*.{ts,tsx,js}": [
      "pnpm --filter @best-mono/web exec eslint --fix"
    ],
    "packages/shared/**/*.{ts,tsx,js}": [
      "pnpm --filter @best-mono/shared exec eslint --fix"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "packageManager": "pnpm@10.27.0",
  "devDependencies": {
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@eslint/js": "^9.39.2",
    "@next/eslint-plugin-next": "^16.1.6",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.0.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "turbo": "^2.8.5",
    "typescript-eslint": "^8.55.0",
    "typescript": "^5.9.3"
  }
}

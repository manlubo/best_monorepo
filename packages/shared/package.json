{
  "name": "@best-mono/shared",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "sideEffects": false,
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "build:types": "tsc -p tsconfig.json",
    "build": "pnpm run build:types && tsup src/index.ts --format esm,cjs",
    "dev": "tsup src/index.ts --format esm,cjs --watch",
    "lint": "eslint ."
  },
  "devDependencies": {
    "@best-mono/config": "workspace:*",
    "@types/node": "^22"
  }
}

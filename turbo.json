{
  "$schema": "https://turbo.build/schema.json",

  "globalDependencies": [
    "packages/config/**",
    ".editorconfig",
    "pnpm-lock.yaml"
  ],

  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },

    "typecheck": {
      "dependsOn": ["^build"],
      "outputs": []
    },

    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"]
    },

    "lint": {
      "outputs": []
    },

    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"]
    }
  }
}
